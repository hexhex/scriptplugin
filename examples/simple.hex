shell_exec("bash ").
perl_exec("perl ").
python_exec("python ").

shell_script("script.sh").
perl_script("script.pl").
python_script("script.py").

shell_temp(X) :- &concat[A,B](X), shell_exec(A), shell_script(B).
perl_temp(X) :- &concat[A,B](X), perl_exec(A), perl_script(B).
python_temp(X) :- &concat[A,B](X), python_exec(A), python_script(B).

shell(X) :- &script[Y](X), shell_temp(Y).
perl(X) :- &script[Y](X), perl_temp(Y).
python(X) :- &script[Y](X), python_temp(Y).
